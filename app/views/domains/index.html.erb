<p id="notice"><%= notice %></p>

<h1>Domains</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Expiration date</th>
      <th>Status</th>
      <th>Registrar</th>
      <th>Contact</th>
      <th>Extension</th>
      <th>Operation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= domain.name %></td>
        <td><%= domain.expiration_date %></td>
        <td><%= domain.status %></td>
        <td><%= domain.registrar %></td>
        <td><%= domain.contact %></td>
        <td><%= domain.extension %></td>
        <td><%= domain.operation %></td>
        <td><%= link_to 'Show', domain %></td>
        <td><%= link_to 'Edit', edit_domain_path(domain) %></td>
        <td><%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

